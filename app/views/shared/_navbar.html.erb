<div class="navbar-fetchify">
  <div class="container">
    <%= link_to root_path, id: "logo" do %>
      <h2><span class="color-red">F</span>ETCHIF<span class="color-red">Y</span></h2>
    <% end %>
    <ul class="menu-list">
      <li class="<%= "active" if current_page?(new_download_path) %>">
        <h4><%= link_to "NEW DOWNLOAD", new_download_path %></h4>
      </li>
      <li class="<%= "active" if current_page?(downloads_path) %>">
        <h4><%= link_to "MY DOWNLOADS", downloads_path %></h4>
      </li>
    </ul>
    <div class="dropdown user-avatar">
      <div class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <div>
          <i class="fas fa-user-circle"></i>
          <i class="fas fa-caret-down"></i>
        </div>
      </div>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
        <%= link_to "Settings", settings_path, class: "dropdown-item"%>
        <%= link_to "Log Out", destroy_user_session_path, class: "dropdown-item", method: :delete %>
      </div>
    </div>
  </div>
</div>
